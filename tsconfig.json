{
  "compilerOptions": {
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "target": "ES2017",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": [
      "ES2017",
      "dom"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}